<div class="container clearfix">
  <ul class="nav nav-pills nav-center">
    <li role="presentation" class="active"><%= link_to "全部餐廳", root_path %></li>
    <% @categories.each do |category| %>
      <li role="presentation">
        <%= link_to category.name, category_path(category) %>
      </li>
    <% end %>
  </ul>
  <% @restaurants.each do |restaurant| %>
    <%= link_to restaurant_path(restaurant) do %>
      <div class="restaurant-item col-md-4">
        <%= image_tag restaurant.image %>
        <h3><%= restaurant.name %></h3>
        <p class="category"><%= restaurant.category.name %></p>
        <p><%= truncate(restaurant.description, length: 80) %></p>
      </div>
    <% end %>
  <% end %>
<%#為啥是:nth-child(4)????%>
  <%= paginate @restaurants %>

</div>
